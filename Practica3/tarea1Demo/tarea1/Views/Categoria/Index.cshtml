 @model IEnumerable<Categoria>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categoría</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Agregar Nueva Categoria</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre de categoría</th>
                    <th>Orden</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var objCategoria in Model)
                {
                    <tr>

                        <td width="50%">@objCategoria.nombre</td>
                        <td width="25%">@objCategoria.orden</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@objCategoria.idCategoria"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@objCategoria.idCategoria"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Ninguna Categoría</p>
    }
</div>

@section Scripts {
    @if (TempData["editCategoria"] != null)
    {
        <script>
            Toastify({
                text: "Se edito la Categoria",
                duration: 3000,
                newWindow: true,

                gravity: "top", // `top` or `bottom`
                position: "left", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();
        </script>
    }

    @if (TempData["DeleteCategoria"] != null)
    {
        <script>
            Toastify({
                text: "Se elimino la categoria",
                duration: 3000,
                newWindow: true,

                gravity: "top", // `top` or `bottom`
                position: "left", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();
        </script>
    }
}
