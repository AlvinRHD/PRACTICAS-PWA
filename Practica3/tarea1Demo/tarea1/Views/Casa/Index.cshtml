 @model IEnumerable<Casa>
 <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Lista de Consolas</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create"  class="btn btn-primary"><i class="fa-solid fa-plus"></i> Agregar Nueva Consola</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>  
                <tr>
                    <th>Nombre de Consola</th>
                    <th>Descripción</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var objCasa in Model)
                {
                    <tr>
                        
                        <td width="50%">@objCasa.nombre</td>
                        <td width="50%">@objCasa.descripcion</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@objCasa.idCasa"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a class="btn btn-danger mx-2"asp-action="Delete" asp-route-id="@objCasa.idCasa"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }
       else
       {
           <p>Ninguna consola</p>
       }
    </div>

@section Scripts{
    @if (TempData["editCasa"] != null)
{
    <script>
        Toastify({
            text: "Se edito la consola",
            duration: 3000,
            newWindow: true,

            gravity: "top", // `top` or `bottom`
            position: "left", // `left`, `center` or `right`
            stopOnFocus: true, // Prevents dismissing of toast on hover
            style: {
                background: "linear-gradient(to right, #00b09b, #96c93d)",
            },
        }).showToast();
    </script>
}

    @if (TempData["DeleteCasa"] != null)
    {
        <script>
            Toastify({
                text: "Se elimino la consola",
                duration: 3000,
                newWindow: true,

                gravity: "top", // `top` or `bottom`
                position: "left", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();
        </script>
    }
}
